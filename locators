# Локаторы на главной странице
#Кнопка "Личный кабинет"
find_element(By.XPATH, ".//p[text()='Личный Кабинет']")
#Кнопка "Конструктор"
find_element(By.XPATH, './/p[text() = "Конструктор"]')
#Кнопка "Секция 'Булки'"
find_element(By.XPATH, './/span[text() = "Булки"]')
#Кнопка "Секция 'Соусы'"
find_element(By.XPATH, './/span[text() = "Соусы"]')
#Кнопка "Секция 'Начинки'"
find_element(By.XPATH, './/span[text() = "Начинки"]')
#Отображение выбранной секции
find_element(By.XPATH, './/div[@style ="display: flex;"]/div[1]')

