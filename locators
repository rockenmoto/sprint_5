#Поле "Почта"
driver.find_element(By.XPATH, ".//fieldset[2]/div/div/input")
#Поле "Пароль"
driver.find_element(By.XPATH, ".//fieldset[3]/div/div/input")
#Кнопка "Зарегистрироваться"
find_element(By.XPATH, "//button[text()='Зарегистрироваться']")
#Уведомление об ошибке
find_element(By.XPATH, ".//p[text()='Некорректный пароль']")

